doctype html
html
    head
        title Admin Portal
        style.
            body {
                font-family: Arial, sans-serif;
                background-color: #f2f2f2;
                margin: 0;
                padding: 0;
            }
            
            h1 {
                color: #333;
                text-align: center;
                margin-top: 50px;
            }
            
            
            ul {
                list-style-type: none;
                padding: 0;
                margin-top: 30px;
                text-align: center;
            }
            
            li {
                margin-bottom: 10px;
            }
            
            form {
                display: inline-block;
            }
            
            button {
                background-color: #4CAF50;
                color: white;
                border: none;
                padding: 10px 20px;
                text-align: center;
                text-decoration: none;
                display: inline-block;
                font-size: 16px;
                margin: 4px 2px;
                cursor: pointer;
            }
            
            p.message {
                text-align: center;
                margin-top: 20px;
                color: #666;
            }
            p{
                color: #4CAF50;
                font-size: 1.5rem;
                text-align:center;
            }
            .logout {
                background-color: #f44336;
                }
    body
        h1 Welcome to the Library Management Portal
        p Hello, #{username}! Here are some options for you:
        ul
            li
                form(action="/user/browse", method="get")
                    button(type="submit") Browse Books
            li
                form(action="/user/my_books", method="get")
                    button(type="submit") My Books and history
            li
                form(action="/register/update_password", method="get")
                    button(type="submit") Update password
            li(style=`display: ${locals.isadmin ? 'none' : 'default'}`) 
                form(action="/user/request_admin", method="post")
                    button(type="submit") Request admin access
            li(style=`display: ${locals.isadmin ? 'default' : 'none'}`) 
                form(action="/admin/", method="get")
                    button(type="submit") Admin Options
            li
                form(action="/login/logout", method="post")
                    button(type="submit", class='logout') Logout
        p= locals.message ? message : ''
