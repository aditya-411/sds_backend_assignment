doctype html
html
    head
        title Browse Books
        style 
            h1, h2{
                text-align : center
            }
            table{
                width: 100%;
            }
            .book-item {
                display: flex;
                flex-direction: row;
                align-items: center;
                padding: 10px;
                border: 1px solid #ccc;
                border-radius: 5px;
                margin-bottom: 10px;
                align: center;
                font-size: 2rem;
                padding: 20px;
            }

            .book-title {
                font-weight: bold;
                font-size: 18px;
                margin-bottom: 5px;
                width: 40%;
                text-align: center;
                font-size: 2rem;
                padding: 20px;
            }

            .book-author {
                font-style: italic;
                margin-bottom: 5px;
                width: 20% ;
                text-align: center;
                font-size: 2rem;
                padding: 20px;
            }

            .table-container button{
                width:100%;
            }

            .book-publisher {
                margin-bottom: 5px;
                width: 25%;
                text-align: center;
                font-size: 2rem;
                padding: 20px;
            }

            button {
                background-color: #00B7FF;
                color: white;
                border: none;
                padding: 5px 10px;
                border-radius: 3px;
                cursor: pointer;
                font-size: 2rem;
                padding: 20px;
            }

            .table-container {
                height: 300px; /* Set the desired height */
                width: 100%;
                overflow: auto; /* Enable scrolling */
                display:flex;
                flex-direction: column;
                align-items: center;
            }
            td, th, .table-container {
                border: 1px solid black;
            }

            .add form{
                display: flex;
                flex-direction: row;
                align-items: center;
                justify-content: space-between;
                margin: 20px;
                border: 1px solid #ccc;
                
            }

    body
        h1 Browse Books
        h2 Book List
        p= locals.message ? message : ''
        div(class="add")
            form(action="/admin/add", method="POST")
                input(type="text", name="title", placeholder="Enter book title")
                input(type="text", name="author", placeholder="Enter book author")
                input(type="text", name="publisher", placeholder="Enter book publisher")
                button(type="submit", class="add") Add Book
        .table-container
            table
                thead
                    tr
                        th(class='header') Book Title
                        th(class='header') Author
                        th(class='header') Publisher
                        th(class='header') Remove 
                        th(class='header') Edit

                tbody
                    each book in books
                        tr
                            td(class='book-title')= book.title
                            td(class='book-author')= book.author
                            td(class='book-publisher')= book.publisher
                            td
                                form(action="/admin/remove", method="POST")
                                    input(type="hidden", name="title", value=book.title)
                                    input(type="hidden", name="author", value=book.author)
                                    input(type="hidden", name="publisher", value=book.publisher)
                                    button(type="submit") Remove
                            td
                                form(action="/admin/update", method="POST")
                                    input(type="hidden", name="title", value=book.title)
                                    button(type="submit") Edit